<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/orange"
    >

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:id="@+id/relativeid">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event Title"
                android:id="@+id/event_title"
                android:layout_toRightOf="@+id/family_member_image"
                android:layout_weight="0.16" />

            <ImageView
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:id="@+id/family_member_image"
                android:layout_weight="0.16"
                android:src="@drawable/parth_priya"
                android:layout_alignParentLeft="true"
                android:layout_alignBottom="@+id/event_location" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event Date and time"
                android:id="@+id/event_data_time"
                android:layout_below="@+id/event_title"
                android:layout_toRightOf="@+id/family_member_image"
                android:layout_toEndOf="@+id/family_member_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Event location"
                android:id="@+id/event_location"
                android:layout_below="@+id/event_data_time"
                android:layout_toRightOf="@+id/family_member_image"
                android:layout_toEndOf="@+id/family_member_image" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>