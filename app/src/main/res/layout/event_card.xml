<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_tiny"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeid">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/event_thumbnail"
            android:layout_weight="0.16"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/parth_priya"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/event_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Title"
            android:id="@+id/event_title"
            android:layout_toRightOf="@+id/event_thumbnail"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event Date and time"
            android:id="@+id/event_date_time"
            android:layout_below="@+id/event_title"
            android:layout_toRightOf="@+id/event_thumbnail"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_toEndOf="@+id/event_thumbnail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Event location"
            android:id="@+id/event_location"
            android:layout_below="@+id/event_date_time"
            android:layout_toRightOf="@+id/event_thumbnail"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_toEndOf="@+id/event_thumbnail" />

    </RelativeLayout>

</android.support.v7.widget.CardView>