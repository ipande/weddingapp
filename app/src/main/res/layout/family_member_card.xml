<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_tiny"
    card_view:cardBackgroundColor="@color/cardview_light_background"
    android:id="@+id/cv"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeid">

        <ImageView
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:id="@+id/family_member_image"
            android:layout_weight="0.16"
            android:adjustViewBounds="true"
            android:src="@drawable/default_image"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/family_member_name"
            android:layout_toRightOf="@+id/family_member_image"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_weight="0.16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="relation"
            android:id="@+id/family_member_relation"
            android:layout_below="@+id/family_member_name"
            android:layout_toRightOf="@+id/family_member_image"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_toEndOf="@+id/family_member_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="information"
            android:id="@+id/family_menber_info"
            android:layout_below="@+id/family_member_relation"
            android:layout_toRightOf="@+id/family_member_image"
            android:layout_marginLeft="@dimen/margin_miniscule"
            android:layout_toEndOf="@+id/family_member_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>