<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image_to_upload"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal" />




        <EditText
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:id="@+id/caption"
            android:layout_below="@+id/image_to_upload"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:hint="Add a caption"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_image_icon"
            android:src="@drawable/image_upload_icon"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/caption"
            android:layout_toEndOf="@+id/caption"
            android:layout_alignTop="@+id/caption"
            android:layout_alignBottom="@+id/caption" />

</RelativeLayout>